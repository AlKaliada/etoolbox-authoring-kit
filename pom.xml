<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <name>AEM Authoring Toolkit</name>
    <groupId>com.exadel.aem</groupId>
    <artifactId>aem-authoring-toolkit</artifactId>
    <version>1.0.1-SNAPSHOT</version>

    <packaging>pom</packaging>

    <modules>
        <module>aem-authoring-toolkit-api</module>
        <module>aem-authoring-toolkit-plugin</module>
        <module>aem-authoring-toolkit-assets</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <sonar.projectKey>${project.artifactId}</sonar.projectKey>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.6.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-plugin-plugin</artifactId>
                <version>3.6.0</version>
            </plugin>
        </plugins>
    </build>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>1.7.26</version>
            </dependency>
            <dependency>
                <groupId>org.apache.sling</groupId>
                <artifactId>org.apache.sling.jcr.resource</artifactId>
                <version>3.0.18</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

   	<repositories>
		<repository>
			<id>adobe</id>
			<name>Adobe Public Repository</name>
			<url>http://repo.adobe.com/nexus/content/groups/public/</url>
			<layout>default</layout>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>adobe</id>
			<name>Adobe Public Repository</name>
			<url>http://repo.adobe.com/nexus/content/groups/public/</url>
			<layout>default</layout>
		</pluginRepository>
	</pluginRepositories>
    <distributionManagement>
        <repository>
            <id>exadel-aem-dialog</id>
            <name>exadel-aem-dialog-releases</name>
            <url>https://dmt-nexus.exadel.com/repository/exadel-aem-dialog-releases/</url>
        </repository>
        <snapshotRepository>
            <id>exadel-aem-dialog</id>
            <name>exadel-aem-dialog-snapshots</name>
            <url>https://dmt-nexus.exadel.com/repository/exadel-aem-dialog-snapshots/</url>
        </snapshotRepository>
    </distributionManagement>
</project>
