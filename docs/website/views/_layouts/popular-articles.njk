---
layout: content
---

<h2 class="popular-articles-title">Welcome on Exadel authoring Kit for AEM</h2>
<h3 class="popular-articles-subheader">Popular articles</h3>
<ul class="popular-articles-container">
  {% set title = r/<h2.*?>.*?<\/h2>/ig %}
  {% set content = r/<p.*>.*?<\/p>/ig %}
  {% for item in collections.all %}
    {% for link in articlesLink %}
      {% set article = item.data %}
      {% if link === article.page.filePathStem %}
        <li class="popular-articles-item">
          {% set text = article.content %}
          <h4 class="mb-2">{{ text.match(title)[0] | safe | striptags }}</h4>
          <p class="popular-articles-content">{{ text.match(content).join(' ') | striptags |  truncate(350) }}</p>
          <a href="{{ article.page.filePathStem | url }}">Learn More</a>
        </li>
      {% endif %}
    {% endfor %}
  {% endfor %}
</ul>
