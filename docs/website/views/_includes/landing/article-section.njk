{% from 'landing/article.njk' import article %}

{% set articles = landing.articles | feed %}

<div class="container mb-150 article">
  <div class="article-title">
    <h3 class="article-heading">{{ landing.articles.title }}</h3>
    <p class="fw-300 article-description">{{ landing.articles.description }}</p>
  </div>
  <div class="article-content">
    <div class="article-first">
      {{ article(articles[0],true) }}
    </div>
    <div class="article-second">
      {{ article(articles[1]) }}
    </div>
    <div class="article-third">
      {{ article(articles[2]) }}
    </div>
  </div>
  <div class="z-index d-flex article-center">
    <a href="{{ landing.urls.articleExadelUrl }}" target="_blank" class="btn btn-blue btn-sec m-0">{{ landing.articles.moreText }}</a>
  </div>
</div>
