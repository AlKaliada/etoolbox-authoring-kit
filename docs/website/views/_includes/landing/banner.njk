{% set landingDir = 'static/assets/landing/' %}

{% macro banner(title, description, buttons, backgroundFile, top) %}
  <div class="banner-container container">
    <div class="banner-content">
      {% if top %}
        <h1 class="banner-title h2">{{ title }}</h1>
      {% else %}
        <h2 class="banner-title">{{ title }}</h2>
      {% endif %}
      <div class="banner-content-section">
        <p class="banner-content-text mb-4">{{ description }}</p>
        {% if buttons %}
          <div class="banner-btns-container">
            <a href="{{ buttons[0].link | url }}" class="btn btn-primary">{{ buttons[0].text }}</a>
            <a href="{{ buttons[1].link }}" class="btn btn-secondary ml-3" target="_blank">{{ buttons[1].text }}</a>
          </div>
        {% endif %}
      </div>
    </div>
    <div class="banner-waves">
      {% include landingDir + backgroundFile %}
    </div>
  </div>
{% endmacro %}
